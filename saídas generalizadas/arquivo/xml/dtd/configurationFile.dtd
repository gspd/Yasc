<!ELEMENT ispd (chart_create, model_open)>
<!ATTLIST ispd simulation_mode (default | optimistic | graphical) "default">
<!ATTLIST ispd number_threads CDATA "1">
<!ATTLIST ispd number_simulations CDATA "1">

<!ELEMENT model_open EMPTY>
<!ATTLIST model_open last_file CDATA ".">

<!ELEMENT chart_create EMPTY>
<!ATTLIST chart_create processing CDATA "true">
<!ATTLIST chart_create communication CDATA "true">
<!ATTLIST chart_create user_time CDATA "true">
<!ATTLIST chart_create machine_time CDATA "false">
<!ATTLIST chart_create task_time CDATA "false">